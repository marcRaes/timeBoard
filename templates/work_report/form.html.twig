{% extends 'base.html.twig' %}

{% block title %}Envoie fiche d'heures - TimeBoard{% endblock %}

{% block body %}
    <div class="container py-4">
        <turbo-frame id="work-report-form-frame">
            {{ form_start(form, {
                action: path('app_work_report_submit', {'id': workMonth.id}),
                attr: {
                    'data-controller': 'signature',
                    'data-action': 'submit->signature#save'
                }
            }) }}

            <div class="modal-header">
                <h5 class="modal-title" id="work-report-modal-label">
                    <i class="bi bi-send"></i>
                    Envoyer la fiche d'heures
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body">
                {% set monthDate = (workMonth.year ~ '-' ~ '%02d'|format(workMonth.month) ~ '-01')|date('F') %}

                <p class="text-muted small">Vous êtes sur le point de soumettre la fiche du mois de <strong>{{ monthDate|trans|capitalize }} {{ workMonth.year }}</strong>. Cette action est définitive.</p>

                {% include 'form/_form_errors.html.twig' with {'form': form} %}

                {% set emailHasError = form.recipientEmail.vars.errors|length > 0 %}
                <div class="mb-3">
                    {{ form_label(form.recipientEmail) }}
                    {{ form_widget(form.recipientEmail, {
                        'attr': {
                            'class': 'form-control' ~ (emailHasError ? ' is-invalid' : '')
                        }
                    }) }}
                    {% if emailHasError %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.recipientEmail) }}
                        </div>
                    {% endif %}
                </div>

                {% set fileHasError = form.attachmentPath.vars.errors|length > 0 %}
                <div class="mb-3">
                    {{ form_label(form.attachmentPath, 'Frais de transport (Optionnel)') }}
                    {{ form_widget(form.attachmentPath, {
                        'attr': {
                            'accept': '.pdf,image/*',
                            'data-max-size': 2097152,
                            'class': 'form-control' ~ (fileHasError ? ' is-invalid' : '')
                        }
                    }) }}
                    <small class="form-text text-muted">Taille max : 2 Mo.</small>
                    {% if fileHasError %}
                        <div class="invalid-feedback d-block">
                            {{ form_errors(form.attachmentPath) }}
                        </div>
                    {% endif %}
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Signature</label>
                    <div class="border rounded p-2 text-center">
                        <canvas data-signature-target="canvas" id="signature-pad" width="400" height="150" class="border w-100"></canvas>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary" data-action="signature#clear">
                            Effacer
                        </button>
                        <small class="text-muted align-self-center">Signez ci-dessus avant d’envoyer</small>
                    </div>
                    <input type="hidden" data-signature-target="input" name="signatureData" id="signature-data">
                </div>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                {{ form_widget(form.submit, {
                    'label': 'Confirmer et Envoyer',
                    'attr': {
                        'class': 'btn btn-success',
                        'data-signature-target': 'submit',
                        'disabled': 'disabled'
                    }
                }) }}
            </div>

            {{ form_end(form) }}
        </turbo-frame>
    </div>
{% endblock %}
