{% extends 'base.html.twig' %}

{% block title %}TimeBoard - Accueil{% endblock %}

{% block body %}
    <div class="container py-4">
        <h1 class="mb-4">Vos mois de travail</h1>

        <div class="mb-4">
            <a href="{{ path('work_day_form') }}" class="btn btn-primary">
                Ajouter une journée de travail
            </a>
        </div>

        <div class="row g-4">
            {% for workMonth in workMonths %}
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-primary text-white">
                            {% set monthDate = (workMonth.year ~ '-' ~ '%02d'|format(workMonth.month) ~ '-01')|date('F') %}
                            {{ monthDate|trans }} {{ workMonth.year }}
                        </div>
                        <div class="card-body">
                            <p class="mb-1">
                                <strong>Nombre de journées travaillées :</strong> {{ workMonth.workDays|length }}
                            </p>
                            <p class="mb-1">
                                <strong>Total heures :</strong> {{ workMonth.formattedTotalTime }}
                            </p>
                            <p class="mb-3">
                                <strong>Tickets restaurant :</strong> {{ workMonth.lunchTickets }}
                            </p>
                            <div class="d-flex justify-content-between">
                                <a href="{{ path('work_day_show', {'id': workMonth.id}) }}" class="btn btn-outline-secondary btn-sm">
                                    Voir
                                </a>
                                <a href="#" class="btn btn-outline-success btn-sm">
                                    Exporter PDF
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        Aucune feuille de temps enregistrée.
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

