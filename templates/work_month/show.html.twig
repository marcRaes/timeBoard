{% extends 'base.html.twig' %}

{% set monthDate = (workMonth.year ~ '-' ~ '%02d'|format(workMonth.month) ~ '-01')|date('F') %}
{% block title %}Mois de travail : {{ monthDate|trans }} {{ workMonth.year }}{% endblock %}

{% block body %}
    <div class="container my-4">
        <h1 class="mb-4">Mois de travail : {{ monthDate|trans }} {{ workMonth.year }}</h1>

        <p>Nombre de journ√©es travaill√©es : {{ workMonth.workDays|length }}</p>
        <p>Total heures : {{ workMonth.formattedTotalTime }}</p>
        <p>Tickets restaurant : {{ workMonth.lunchTickets }}</p>

        <div class="mb-4">
                <a href="{{ path('app_work_report_submit', { 'id': workMonth.id }) }}" class="btn btn-primary">
                    Envoyer la fiche d'heures
                </a>
        </div>


        {% for workDay in workMonth.workDays %}
            <turbo-frame id="work-day-form-frame">
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <strong>Journ√©e du {{ workDay.date|date('d/m/Y') }}</strong>
                        <div>
                            <a href="{{ path('app_work_day_update', { id: workDay.id }) }}" class="btn btn-sm btn-primary">‚úèÔ∏è Modifier</a>
                            <form method="post" action="{{ path('app_work_day_delete', { id: workDay.id }) }}" class="d-inline" onsubmit="return confirm('Supprimer cette journ√©e ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ workDay.id) }}">
                                <button class="btn btn-sm btn-danger">üóëÔ∏è Supprimer</button>
                            </form>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        <table class="table table-sm mb-0 table-striped">
                            <thead class="table-light">
                            <tr>
                                <th>D√©but</th>
                                <th>Fin</th>
                                <th>Dur√©e</th>
                                <th>Lieu</th>
                                <th>Agent remplac√©</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for period in workDay.workPeriods %}
                                <tr>
                                    <td>{{ period.timeStart ? period.timeStart|date('H:i') : '-' }}</td>
                                    <td>{{ period.timeEnd ? period.timeEnd|date('H:i') : '-' }}</td>
                                    <td>{{ period.duration ? period.duration|calculate_work_duration : '-' }}</td>
                                    <td>{{ period.location ?: '-' }}</td>
                                    <td>{{ period.replacedAgent ?: '-' }}</td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7" class="text-center text-muted">Aucune p√©riode renseign√©e.</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="card-footer">
                        Ticket restaurant :
                        {% if workDay.hasLunchTicket %}
                            <span class="badge bg-success">Oui</span>
                        {% else %}
                            <span class="badge bg-secondary">Non</span>
                        {% endif %}
                    </div>
                </div>
            </turbo-frame>
        {% else %}
            <div class="alert alert-info">Aucune journ√©e enregistr√©e pour ce mois.</div>
        {% endfor %}

        <a href="{{ path('app_home') }}" class="btn btn-link mt-3">‚Üê Retour √† l‚Äôaccueil</a>
    </div>
{% endblock %}
