{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>
        <div>
            <label for="username">Email</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" autocomplete="email" required autofocus>
        </div>
        <div data-controller="password-toggle" style="position:relative; display:inline-block;">
            <label for="password password-field">Mot de passe</label>
            <input type="password" name="_password" id="password password-field" autocomplete="current-password" data-password-toggle-target="input" required>
            <button type="button"
                    data-password-toggle-target="toggleIcon"
                    data-action="click->password-toggle#toggle"
                    class="btn btn-sm password-toggle-btn"
                    style="border:none; background:transparent; padding:0 0.5rem; z-index:10;"
                    aria-label="Afficher ou masquer le mot de passe"
                    tabindex="-1">
                <i class="bi bi-eye"></i>
            </button>
        </div>
        <input type="hidden" name="_csrf_token" data-controller="csrf-protection" value="{{ csrf_token('authenticate') }}">

        <div>
            <button class="btn btn-lg btn-primary" type="submit">Se connecter</button>
        </div>
    </form>
{% endblock %}
